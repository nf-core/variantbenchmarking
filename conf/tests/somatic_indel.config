/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/variantbenchmarking -profile somatic_indel,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.5GB'
    max_time   = '8.h'

    // Input data
    test_data_base  = 'https://raw.githubusercontent.com/nf-core/test-datasets/variantbenchmarking'
    input           = "${params.test_data_base}/samplesheet/sarek/3.5.1/samplesheet_sarek_somatic_snv.csv"
    outdir          = 'results'

    // Genome references
    genome          = 'GRCh38'
    analysis        = 'somatic'
    method          = 'sompy'
    preprocess      = "normalize,filter_contigs"
    include_expression   = 'TYPE="snp"'

    variant_type    = "snv"
    truth_id        = "SEQC2"
    truth_vcf       = "${params.test_data_base}/testdata/hg38/truth/somatic/high-confidence_sSNV_in_HC_regions_v1.2_gt.vcf"
    regions_bed     = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/seqc/Somatic_Mutation_WG/release/latest/High-Confidence_Regions_v1.2.bed"
    rename_chr      = "${projectDir}/assets/rename_contigs/grch37_grch38.txt"

}

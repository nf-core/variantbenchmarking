/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/variantbenchmarking -profile test_ga4gh,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    test_data_base  = 'https://raw.githubusercontent.com/nf-core/test-datasets/variantbenchmarking'
    // Input data
    input           = "samplesheet_sarek_germline_small.csv"
    outdir          = "results"

    // Genome references
    genome          = 'GRCh38'
    analysis        = 'germline'
    method          = 'happy,rtgtools'
    preprocess      = "normalize,split_multiallelic,deduplicate,filter_contigs"

    // truth information
    truth_id        = "HG001"
    truth_vcf       = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/giab/release/NA12878_HG001/latest/GRCh38/HG001_GRCh38_1_22_v4.2.1_benchmark.vcf.gz"
    regions_bed     = "https://ftp-trace.ncbi.nlm.nih.gov/ReferenceSamples/giab/release/NA12878_HG001/latest/GRCh38/HG001_GRCh38_1_22_v4.2.1_benchmark.bed"
}

process {
    withName: HAPPY_HAPPY {
        container = 'community.wave.seqera.io/library/hap.py_rtg-tools:2ebb433f3ce976d3'
        ext.args = '--engine=vcfeval --leftshift'
    }
}
